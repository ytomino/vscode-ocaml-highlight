{
    "name": "ocaml-highlight",
    "displayName": "OCaml Highlight",
    "description": "OCaml syntax highlight",
    "version": "0.0.1",
    "publisher": "ytomino",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "ocaml",
            "aliases": ["OCaml", "ocaml"],
            "extensions": [".ml",".mli"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "ocaml",
            "scopeName": "source.ocaml",
            "path": "./syntaxes/ocaml.json"
        }],
        "problemMatchers": [{
            "name": "ocamlc",
            "owner": "ocaml-highlight",
            "fileLocation": [
                "relative",
                "${workspaceFolder}"
            ],
            "pattern": [
                {
                    "regexp": "^File\\s+\"(.*)\",\\s+line\\s+(\\d+)(?:,\\s+characters\\s+(\\d+)(?:-(\\d+))?)?:$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endColumn": 4
                },
                {
                    "regexp": "^(?:(Error|Parse\\s+error|Warning\\s+\\d+):)?\\s+(.*)$",
                    "severity": 1,
                    "message": 2,
                    "loop": true
                }
            ]
        }]
    }
}
